<a href="/users/destroy">Logout</a>

<h3>Name: <%= @borrower.first_name %> <%= @borrower.last_name %> </h3>
<h3>Amount Needed: <%= @borrower.money %></h3>
<h3>Amount Raised: <%= @borrower.raised %></h3>

<h4>List of People who loaned you money</h4>
<table>
	<th>
		<tr>
			<td>Name</td>
			<td>Email</td>
			<td>Amount Lent</td>
		</tr>
	</th>
	<% if @lenders %>
		<% @lenders.each do |x| %>
	<tr>
		<td><%= x.lender.first_name %> <%= x.lender.last_name %></td>
		<td><%= x.lender.email %></td>
		<td><%= x.amount %></td>
	</tr>
		<% end %>
	<% end %>
</table>